<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.hh.salle_library.MainScreen">


    <TextView
        android:id="@+id/currentuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_string"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_30_dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginTop="@dimen/marginTop_20"/>

    <TextView
        android:id="@+id/currentemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_string"
        android:textSize="@dimen/padding_15"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10" />


</FrameLayout>
